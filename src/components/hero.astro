---
import { Picture } from "astro:assets";
import heroImage from "assets/icon.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Budget planning illustration"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="rounded-full"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
    >
      Modern Envelope Budgeting That Works
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Automatic bank syncing and intuitive drag-and-drop categorization make
      envelope budgeting effortless. Track your spending in real-time and give
      every dollar a purpose with jpc.finance.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://finance.jpc.io"
        class="flex gap-1 items-center justify-center"
        rel="noopener"
      >
        <Icon class="text-white w-5 h-5" name="mdi:account-plus" />
        Start Budgeting Free
      </Link>
      <Link
        href="https://apps.apple.com/app/id6499078837"
        style="outline"
        class="flex gap-1 items-center justify-center"
        rel="noopener"
      >
        <Icon class="text-black w-5 h-5" name="mdi:apple" />
        Download for iOS
      </Link>
    </div>
  </div>
</main>
